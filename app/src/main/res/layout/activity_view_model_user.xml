<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ViewModelUserActivity">
    
    <EditText
        android:hint="Nombre"
        android:id="@+id/userActivityEtNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:hint="Edad"
        android:id="@+id/userActivityEtEdad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:hint="Mail"
        android:id="@+id/userActivityEtMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:hint="DNI"
        android:id="@+id/userActivityEtDNI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:text="Salvar"
        android:id="@+id/userActivityBtSalvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:text="Ver"
        android:id="@+id/userActivityBtVer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/userActivityTvUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:paddingTop="16dp"
        android:id="@+id/userActivityTvUserViewModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>